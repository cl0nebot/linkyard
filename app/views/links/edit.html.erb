<%= form_for @link do |f| %>
  <%= render "shared/errors", locals: { errors?: @link.errors.any?, error_message: @link.errors.full_messages.to_sentence } %>
  <%= f.label :url %>
  <%= f.text_field :url, { required: true, autofocus: true } %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :title %>
  <%= f.text_field :title, { required: true } %>

  <%= f.label :content %>
  <%= f.text_area :content, { class: "content" } %>

  <%= f.label :digest %>
  <%= f.select :digest, @available_types %>

  <%= f.submit 'Update' %>
<% end %>
