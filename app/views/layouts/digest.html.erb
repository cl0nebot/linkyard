        <h1><%= link_to "Weekly #{@digest_type.capitalize} Digest", root_path %></h1>
      </div>
      <div class="pure-u-1-3">
        <ul>
          <%= navigation_link_to 'Archive', digests_path %>
          <%= navigation_link_to 'Search', search_digests_path %>
          <%= navigation_link_to 'RSS', feed_digests_path(format: "rss") %>
        </ul>
      </div>
    </div>
  </header>

