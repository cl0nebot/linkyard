<h1>Dashboard</h1>

<div class="stats">
  <h2>Subscribers</h2>
  <ul>
    <% @subscriber_stats.each do |s| %>
     <li><%= s.first %>: <strong><%= s.last %></strong></li>
    <% end %>
  </ul>
  <hr />
  <h2>Pending Scheduled: <%= @scheduled_links_count %></h2>
  <hr />
</div>

<div class="digests">
  <h2>Future Digests</h2>
  <% @future_digests.each do |d| %>
    <h3><%= "#{d.type} ##{d.issue}" %></h3>
    <% d.links_by_category.each do |category, links| %>
      <h4><%= category.name %></h4>
      <ul>
        <% links.each do |link| %>
          <li>
            <%= link_to link.title, link.url %> :: <%= link.tags.map(&:name).join(", ") %>
            <br /><%= link.description %>
          </li>
        <% end %>
      </ul>
    <% end %>
    <hr />
  <% end %>
</div>
